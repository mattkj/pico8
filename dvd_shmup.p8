pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
 cls(0)
 xpos = 60
 ypos = 110
 speed_x = 1
 speed_y = 1
end

function _draw()
 cls(0)
 
 spr(1,xpos,ypos)  -- ship
end

function _update()
 
 xpos = xpos + speed_x
 ypos = ypos + speed_y
 
 if xpos > 120 then
 	speed_x = -1
 end
 
 if xpos < 0 then
  speed_x = 1
 end
 
 if ypos < 0 then
  speed_y = 1
 end
 
 if ypos > 120 then
  speed_y = -1
 end
 
 

end
