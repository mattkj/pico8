pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
 cls(0)
 xpos = 60
 ypos = 110
 speed_x = 0
 speed_y = 0
 bull_x = 0
 bull_y = -8
 bull_spd = -4
 bullspr = 3
 shipspr = 17
 flamespr = 19
 muzzle = 0
 
end

function _update()
 speed_x = 0
 speed_y = 0
 shipspr = 17
 
 if btn(0) then
 	speed_x = -2
 	shipspr = 16
 end
 
 if btn(1) then
  speed_x = 2
  shipspr = 18
 end
 
 if btn(2) then
  speed_y = -2
 end
 
 if btn(3) then
  speed_y = 2
 end
 
 if btnp(4) then
  bull_x = xpos
  bull_y = ypos - 4
  sfx(0)
  muzzle = 3
 end
 
 xpos = xpos + speed_x
 ypos = ypos + speed_y
 bull_y = bull_y + bull_spd
 
 muzzle = muzzle - 1
 
 flamespr += 1
 bullspr += 1
 
 if flamespr > 22 then
  flamespr = 19
 end 
 
 if bullspr > 6 then
  bullspr = 3
 end
 
 if xpos > 120 then
 	xpos = -0
 end
 
 if xpos < -0 then
  xpos = 120
 end
 
 if ypos < 0 then
  ypos = 120
 end
 
 if ypos > 120 then
  ypos = 0
 end

end

function _draw()
 cls(0)
 
 spr(shipspr,xpos,ypos) -- ship
 spr(bullspr,bull_x,bull_y) -- bullet
 spr(flamespr,xpos,ypos+5) -- flame
 
 if muzzle > 0 then 
  circfill(xpos+3,ypos-2,muzzle,7)
  circfill(xpos+4,ypos-2,muzzle,7)
 end
end
